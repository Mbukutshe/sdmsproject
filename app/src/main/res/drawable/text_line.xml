<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"
                android:dashGap="4dp"
                android:dashWidth="2dp"/>
        </shape>
    </item>
</layer-list>