<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp"
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"
                android:dashGap="4dp"
                android:dashWidth="2dp"/>
            <solid
                android:color="#fff"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"/>
        </shape>

    </item>
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp"
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#fff"
                android:dashGap="4dp"
                android:dashWidth="2dp"/>
            <solid
                android:color="@color/colorPrimary"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"/>
        </shape>

    </item>
</selector>