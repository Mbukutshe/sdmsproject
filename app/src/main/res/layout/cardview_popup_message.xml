<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingTop="16dp"
        card_view:contentPaddingRight="16dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:theme="@style/AlertDialog.AppCompat">

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_border"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">
            <ImageButton
                android:id="@+id/left_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/leftarrow"
                android:layout_toLeftOf="@+id/author_message"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/author_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:paddingTop="19dp"
                android:layout_gravity="left"
                android:layout_toRightOf="@+id/left_arrow"
                android:text="Upload Document"
                android:textAppearance="@style/dialog_title"
                />
            <TextView
                android:id="@+id/time_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_toRightOf="@+id/author_message"
                android:layout_alignParentRight="true"
                android:text="Time"
                android:textColor="#FFF"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/message_layout_message"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/message_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:text="Lorem "
                android:paddingRight="20dp"
                android:textAppearance="@style/Subject"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/author_layout_message"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout_message"
            android:paddingLeft="2dp">
            android:paddingBottom="5dp"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_below="@+id/message_layout_message"
                android:id="@+id/info_text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/messageid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/info_text_message"
                android:layout_alignParentRight="true" />
        </FrameLayout>
    </RelativeLayout>