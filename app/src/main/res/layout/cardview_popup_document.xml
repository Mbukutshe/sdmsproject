<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    card_view:cardElevation="1dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:theme="@style/AlertDialog.AppCompat">
    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_border"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:elevation="4dp"
        android:layout_marginBottom="20dp">
            <ImageButton
                android:id="@+id/left_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/leftarrow"
                android:layout_toLeftOf="@+id/author_message"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/left_arrow"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="left"
                android:text="Subject:"
                android:layout_weight="100"
                android:textAppearance="@style/dialog_title"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:paddingTop="20dp"
                android:layout_gravity="right"
                android:layout_toRightOf="@+id/info_text"
                android:layout_alignParentRight="true"
                android:textColor="#FFF"
                android:text=""
                />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingRight="50dp"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/author_layout"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout"
            android:paddingLeft="20dp">
            android:paddingBottom="10dp">
            <TextView
                android:layout_below="@+id/message_layout"
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/sender_style"
                android:text="by:"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/author_layout"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/clear"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/clear"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/docId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/filename"
                android:layout_alignParentRight="true" />
        </LinearLayout>
    </RelativeLayout>