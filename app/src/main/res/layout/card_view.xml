<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:theme="@style/AlertDialog.AppCompat"
    android:layout_marginTop="5dp">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp">
        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/time"
                android:gravity="center"
                android:maxLength="13"
                android:text="Subject:"
                android:layout_weight="1"
                android:textAppearance="@style/Subject"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_toRightOf="@+id/info_text"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:text="Time"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/message_layout"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp">
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingRight="50dp"
                android:textColor="@color/colorPrimary"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/author_layout"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout"
            android:paddingLeft="2dp">
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/profilepic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/profilepic"
                android:layout_toLeftOf="@+id/author"
                android:layout_gravity="start"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toLeftOf="@+id/profilepic"
                android:layout_alignParentRight="true"
                android:text="by:"
                android:textAppearance="@style/sender_style"
               />
            <ImageView
                android:id="@+id/options"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@drawable/button_selector"
                android:layout_toRightOf="@+id/author"
                android:background="@drawable/threedots"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/author_layout"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toLeftOf="@+id/filename"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/link"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/docId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/filename"
                android:layout_alignParentRight="true" />
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>