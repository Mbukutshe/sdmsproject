<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="1dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:theme="@style/AlertDialog.AppCompat"
    android:layout_marginTop="-5dp">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="2dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/time"
                android:layout_alignParentLeft="true"
                android:text="Subject:fdddddddddddddddddddddddddddddddddddddddddddddddddddddg"
                android:layout_weight="100"
                android:textAppearance="@style/Subject"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/info_text"
                android:layout_alignParentRight="true"
                android:text="Time"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp">
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingRight="50dp"
                android:text="Lorem gfdgffffffffffffffffffffffffffffffffffffffffghhgfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffh"
                android:maxLines="1"
                android:ellipsize="end"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/author_layout"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout"
            android:paddingLeft="2dp">
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_below="@+id/message_layout"
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by:"
                android:layout_weight="1"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/author_layout"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/view"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:text="view"
                android:textColor="@drawable/button_selector"
                android:textSize="12dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:text="download"
                android:textColor="@drawable/button_selector"
                android:textSize="12dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="DELETE"
                android:textColor="@drawable/button_selector"
                android:textSize="12dp"
                android:background="@drawable/button_background"/>
            <TextView
                android:id="@+id/link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/clear"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/clear"
                android:layout_alignParentRight="true" />
            <ImageView
                android:id="@+id/options_menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/threedots"
                android:layout_marginLeft="200dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>